{
  "description": "Phase gate enforcement hooks for mb-keyword-analysis. Ensures every phase completes before progression and blocks completion until all deliverables exist.",
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/validate-completion.py",
            "timeout": 30
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/validate-phase-gate.py",
            "timeout": 10
          }
        ]
      }
    ]
  }
}

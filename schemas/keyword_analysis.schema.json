{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Tab 1: Keyword Analysis",
    "description": "Schema for the 'Keyword Analysis' tab. Contains raw research data with service validation.",
    "type": "array",
    "items": {
        "type": "object",
        "required": [
            "Keyword",
            "Avg. Monthly Searches",
            "Competition",
            "Category",
            "Match Type",
            "Match Type Rationale",
            "Service_ID",
            "Include"
        ],
        "properties": {
            "Keyword": {
                "type": "string",
                "description": "The keyword text."
            },
            "Avg. Monthly Searches": {
                "type": [
                    "integer",
                    "string"
                ],
                "description": "Estimated monthly search volume."
            },
            "YoY Change": {
                "type": [
                    "string",
                    "number",
                    "null"
                ],
                "description": "Year-over-year change (e.g., '+10%', '-5%')."
            },
            "Competition": {
                "type": "string",
                "enum": [
                    "Low",
                    "Medium",
                    "High",
                    "Unspecified",
                    "-"
                ],
                "description": "Competition level."
            },
            "Top of page bid (low range)": {
                "type": [
                    "string",
                    "number"
                ],
                "description": "Low bid estimate in target currency (DKK/NOK/SEK)."
            },
            "Top of page bid (high range)": {
                "type": [
                    "string",
                    "number"
                ],
                "description": "High bid estimate in target currency (DKK/NOK/SEK)."
            },
            "Category": {
                "type": "string",
                "description": "Thematic grouping for the keyword (maps to campaign)."
            },
            "Intent": {
                "type": "string",
                "enum": [
                    "High",
                    "Medium",
                    "Low",
                    "Unspecified"
                ],
                "description": "Commercial intent level."
            },
            "Buyer Journey": {
                "type": "string",
                "enum": [
                    "Problem",
                    "Solution",
                    "Proof",
                    "Action",
                    "Unspecified"
                ],
                "description": "Stage in the buyer journey this keyword targets."
            },
            "Match Type": {
                "type": "string",
                "enum": [
                    "Exact",
                    "Phrase",
                    "Broad"
                ],
                "description": "Recommended match type for this keyword."
            },
            "Match Type Rationale": {
                "type": "string",
                "description": "Explanation of why this match type was chosen. E.g., 'High-intent action keyword, budget tier Lean, volume 880 - use Phrase'."
            },
            "Service_ID": {
                "type": [
                    "string",
                    "null"
                ],
                "description": "Service ID from Canonical Service List (e.g., 'SVC-001'). Null if keyword doesn't match any canonical service."
            },
            "Service_Validation": {
                "type": "string",
                "enum": [
                    "MATCHED",
                    "UNMATCHED",
                    "PENDING_REVIEW"
                ],
                "description": "Result of validating keyword against $CANONICAL_SERVICES."
            },
            "Include": {
                "type": "boolean",
                "description": "Whether to include this keyword in the final campaign. Set to false for excluded keywords."
            },
            "Exclusion_Reason": {
                "type": [
                    "string",
                    "null"
                ],
                "description": "If Include=false, explain why. E.g., 'LinkedIn not in $CANONICAL_SERVICES', 'Volume too low', 'CPC exceeds $MAX_CPC'."
            },
            "Positioning": {
                "type": "boolean",
                "description": "True if this keyword came from Pass 0 positioning research and reflects unique differentiation."
            },
            "_source": {
                "type": "string",
                "description": "Data source indicator. Should be 'google_ads_api' for authentic data."
            }
        }
    }
}
